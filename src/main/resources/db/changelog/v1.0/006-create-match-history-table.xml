<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="006-create-match-history-table" author="system">
        <comment>Create match_history table</comment>
        
        <createTable tableName="match_history">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="member_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="start_point" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="end_point" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="matched_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="DATETIME"/>
            <column name="created_time" type="DATETIME"/>
            <column name="updated_time" type="DATETIME"/>
        </createTable>
        
        <addForeignKeyConstraint 
            baseTableName="match_history" 
            baseColumnNames="member_id" 
            referencedTableName="member" 
            referencedColumnNames="id" 
            constraintName="fk_match_history_member"/>
        
        <createIndex tableName="match_history" indexName="idx_match_history_member">
            <column name="member_id"/>
        </createIndex>
        
        <createIndex tableName="match_history" indexName="idx_match_history_matched_at">
            <column name="matched_at"/>
        </createIndex>
        
    </changeSet>

</databaseChangeLog>