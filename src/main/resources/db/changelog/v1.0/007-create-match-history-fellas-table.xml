<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="007-create-match-history-fellas-table" author="system">
        <comment>Create match_history_fellas table for ElementCollection</comment>
        
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="match_history_fellas"/>
            </not>
        </preConditions>
        
        <createTable tableName="match_history_fellas">
            <column name="history_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="fellas" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint 
            baseTableName="match_history_fellas" 
            baseColumnNames="history_id" 
            referencedTableName="match_history" 
            referencedColumnNames="id" 
            constraintName="fk_match_history_fellas_history"/>
        
        <createIndex tableName="match_history_fellas" indexName="idx_match_history_fellas_history">
            <column name="history_id"/>
        </createIndex>
        
    </changeSet>

</databaseChangeLog>