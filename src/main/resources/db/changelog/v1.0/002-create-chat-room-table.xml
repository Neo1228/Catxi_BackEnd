<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-create-chat-room-table" author="system">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="chat_room"/>
            </not>
        </preConditions>

        <comment>Create chat_room table</comment>
        
        <createTable tableName="chat_room">
            <column name="room_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="host_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="start_point" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="end_point" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="depart_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="max_capacity" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="matched_at" type="DATETIME">
                <constraints nullable="true"/>
            </column>
            <column name="created_time" type="DATETIME"/>
            <column name="updated_time" type="DATETIME"/>
        </createTable>
        
        <addForeignKeyConstraint 
            baseTableName="chat_room" 
            baseColumnNames="host_id" 
            referencedTableName="member" 
            referencedColumnNames="id" 
            constraintName="fk_chat_room_host"/>
            
        <createIndex tableName="chat_room" indexName="idx_chat_room_status">
            <column name="status"/>
        </createIndex>
        
        <createIndex tableName="chat_room" indexName="idx_chat_room_depart_at">
            <column name="depart_at"/>
        </createIndex>
        
    </changeSet>

</databaseChangeLog>