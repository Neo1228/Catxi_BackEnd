<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="005-create-chat-message-table" author="system">
                <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="chat_message"/>
            </not>
        </preConditions>

        <comment>Create chat_message table</comment>
        
        <createTable tableName="chat_message">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="msg_type" type="VARCHAR(20)"/>
            <column name="chat_room_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="member_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="content" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="created_time" type="DATETIME"/>
            <column name="updated_time" type="DATETIME"/>
        </createTable>
        
        <addForeignKeyConstraint 
            baseTableName="chat_message" 
            baseColumnNames="chat_room_id" 
            referencedTableName="chat_room" 
            referencedColumnNames="room_id" 
            constraintName="fk_chat_message_room"/>
            
        <addForeignKeyConstraint 
            baseTableName="chat_message" 
            baseColumnNames="member_id" 
            referencedTableName="member" 
            referencedColumnNames="id" 
            constraintName="fk_chat_message_member"/>
        
        <createIndex tableName="chat_message" indexName="idx_chat_message_room">
            <column name="chat_room_id"/>
        </createIndex>
        
        <createIndex tableName="chat_message" indexName="idx_chat_message_created_time">
            <column name="created_time"/>
        </createIndex>
        
    </changeSet>

</databaseChangeLog>