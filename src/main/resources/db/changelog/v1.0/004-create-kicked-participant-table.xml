<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004-create-kicked-participant-table" author="system">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="kicked_participant"/>
            </not>
        </preConditions>

        <comment>Create kicked_participant table</comment>
        
        <createTable tableName="kicked_participant">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="chat_room_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="member_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint 
            baseTableName="kicked_participant" 
            baseColumnNames="chat_room_id" 
            referencedTableName="chat_room" 
            referencedColumnNames="room_id" 
            constraintName="fk_kicked_participant_room"/>
            
        <addForeignKeyConstraint 
            baseTableName="kicked_participant" 
            baseColumnNames="member_id" 
            referencedTableName="member" 
            referencedColumnNames="id" 
            constraintName="fk_kicked_participant_member"/>
        
        <createIndex tableName="kicked_participant" indexName="idx_kicked_participant_room">
            <column name="chat_room_id"/>
        </createIndex>
        
    </changeSet>

</databaseChangeLog>