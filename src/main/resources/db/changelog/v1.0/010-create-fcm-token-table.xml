<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="010-create-fcm-token-table" author="system">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="fcm_token"/>
            </not>
        </preConditions>

        <comment>Create FCM token table for push notifications</comment>
        
        <createTable tableName="fcm_token">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="member_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="token" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_time" type="DATETIME"/>
            <column name="updated_time" type="DATETIME"/>
        </createTable>
        
        <addForeignKeyConstraint 
            constraintName="fk_fcm_token_member"
            baseTableName="fcm_token" 
            baseColumnNames="member_id"
            referencedTableName="member" 
            referencedColumnNames="id"
            onDelete="CASCADE"/>
        
        <createIndex tableName="fcm_token" indexName="idx_fcm_token_member_id">
            <column name="member_id"/>
        </createIndex>
        
        <createIndex tableName="fcm_token" indexName="idx_fcm_token_member_active">
            <column name="member_id"/>
            <column name="is_active"/>
        </createIndex>
        
    </changeSet>

</databaseChangeLog>