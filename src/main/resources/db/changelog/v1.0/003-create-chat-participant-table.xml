<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003-create-chat-participant-table" author="system">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="chat_participant"/>
            </not>
        </preConditions>

        <comment>Create chat_participant table</comment>
        
        <createTable tableName="chat_participant">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="chat_room_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="member_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="is_ready" type="BOOLEAN"/>
            <column name="is_host" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="created_time" type="DATETIME"/>
            <column name="updated_time" type="DATETIME"/>
        </createTable>
        
        <addForeignKeyConstraint 
            baseTableName="chat_participant" 
            baseColumnNames="chat_room_id" 
            referencedTableName="chat_room" 
            referencedColumnNames="room_id" 
            constraintName="fk_chat_participant_room"/>
            
        <addForeignKeyConstraint 
            baseTableName="chat_participant" 
            baseColumnNames="member_id" 
            referencedTableName="member" 
            referencedColumnNames="id" 
            constraintName="fk_chat_participant_member"/>
        
        <createIndex tableName="chat_participant" indexName="idx_chat_participant_room">
            <column name="chat_room_id"/>
        </createIndex>
        
        <createIndex tableName="chat_participant" indexName="idx_chat_participant_member">
            <column name="member_id"/>
        </createIndex>
        
    </changeSet>

</databaseChangeLog>