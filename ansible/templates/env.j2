# Security
SECRET_KEY={{ lookup('env', 'SECRET_KEY') | default('') }}

# Kakao OAuth
KAKAO_CLIENT_ID={{ lookup('env', 'KAKAO_CLIENT_ID') | default('') }}
KAKAO_CLIENT_SECRET={{ lookup('env', 'KAKAO_CLIENT_SECRET') | default('') }}

# Redis Configuration
REDIS_HOST={{ lookup('env', 'REDIS_HOST') | default('localhost') }}
