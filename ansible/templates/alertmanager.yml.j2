global:
  resolve_timeout: 5m

route:
  group_by: ['alertname', 'cluster', 'service']
  group_wait: 10s
  group_interval: 10s
  repeat_interval: 12h
  receiver: 'catxi-alerts'
  routes:
  - match:
      severity: critical
    receiver: 'critical-alerts'
    repeat_interval: 5m
  - match:
      severity: warning
    receiver: 'warning-alerts'
    repeat_interval: 1h

receivers:
- name: 'catxi-alerts'
{% if lookup('env', 'DISCORD_WEBHOOK_URL') %}
  webhook_configs:
  - url: '{{ lookup("env", "DISCORD_WEBHOOK_URL") }}'
    send_resolved: true
    http_config:
      follow_redirects: true
{% else %}
  webhook_configs: []
{% endif %}

- name: 'critical-alerts'
{% if lookup('env', 'DISCORD_WEBHOOK_URL') %}
  webhook_configs:
  - url: '{{ lookup("env", "DISCORD_WEBHOOK_URL") }}'
    send_resolved: true
    http_config:
      follow_redirects: true
{% else %}
  webhook_configs: []
{% endif %}

- name: 'warning-alerts'
{% if lookup('env', 'DISCORD_WEBHOOK_URL') %}
  webhook_configs:
  - url: '{{ lookup("env", "DISCORD_WEBHOOK_URL") }}'
    send_resolved: true
    http_config:
      follow_redirects: true
{% else %}
  webhook_configs: []
{% endif %}

inhibit_rules:
  - source_match:
      severity: 'critical'
    target_match:
      severity: 'warning'
    equal: ['alertname', 'instance']